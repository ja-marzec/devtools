---

<section id="testimonials" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    {/* Nagłówek */}
    <div class="max-w-2xl mb-16">
      <h2
        class="text-primary font-bold text-sm uppercase tracking-[0.2em] mb-4"
      >
        Referencje
      </h2>
      <h3
        class="text-3xl md:text-4xl font-black text-slate-900 tracking-tight leading-tight"
      >
        Opinie o warsztatach: <br class="hidden md:block" />
      </h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-20">
      {
        testimonials.map((t) => (
          <div class="flex flex-col h-full p-8 rounded-2xl bg-slate-50 border border-slate-100 hover:border-primary/20 transition-colors">
            <div class="grow">
              <p class="text-slate-600 leading-relaxed mb-8">"{t.content}"</p>
            </div>

            <div class="flex items-center gap-4 pt-6 border-t border-slate-200/60">
              <div class="w-10 h-10 rounded-full bg-slate-200 flex items-center justify-center font-bold text-slate-500 text-xs">
                {t.name
                  .split(" ")
                  .map((n) => n[0])
                  .join("")}
              </div>
              <div>
                <p class="font-bold text-sm text-slate-900 leading-none mb-1">
                  {t.name}
                </p>
                <p class="text-[10px] text-slate-400 font-bold uppercase tracking-wider">
                  {t.role} <span class="text-primary/40 mx-1">/</span>{" "}
                  {t.company}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="pt-4 border-t border-slate-100">
      <div
        class="flex flex-col md:flex-row items-center justify-between gap-12"
      >
        <p
          class="text-[10px] font-black text-slate-400 uppercase tracking-[0.3em] whitespace-nowrap"
        >
          ZAUFALI NAM PRACOWNICY:
        </p>
        <div
          class="flex flex-wrap justify-center gap-x-12 gap-y-6 opacity-40 grayscale contrast-125"
        >
          {
            logos.map((logo) => (
              <span class="text-sm md:text-base font-bold text-slate-800 tracking-tight select-none">
                {logo}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
